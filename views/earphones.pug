extends layout

block content
  h1= title
  - let earphones = results
  div(class="container-fluid")
    div(class="row")
      each item,index in earphones
        div(class="col-sm-2",onClick=`buy(${index})`)
          p Color is #{item.earphones_color}
          p Length is #{item.earphones_length}
          p Cost is #{item.earphones_cost}
          p Sound is #{item.earphones_sound}
    //- Bonus Logic
  script.
    function buy(itr) {
      itr = itr+1;
      alert(`You Purchased Item ${itr}`);
    }
    